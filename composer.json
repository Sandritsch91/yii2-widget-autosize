{
    "name": "sandritsch91/yii2-widget-autosize",
    "type": "yii2-extension",
    "description": "An autosize widget for yii2",
    "keywords": [
        "yii2",
        "widget",
        "autosize",
        "textarea"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Sandritsch91",
            "email": "sandritsch91@gmail.com"
        }
    ],
    "support": {
        "source": "https://github.com/Sandritsch91/yii2-widget-autosize",
        "issues": "https://github.com/Sandritsch91/yii2-widget-autosize/issues"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "yiisoft/yii2": "^2.0.20",
        "bower-asset/autosize": "^4.0.0 | ^5.0.0 | ^6.0.0"
    },
    "require-dev": {
        "yiisoft/yii2-coding-standards": "*"
    },
    "autoload": {
        "psr-4": {
            "sandritsch91\\yii2\\autosize\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
